<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAtendimentoResposta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/textViewFaixaLateralDif"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text=" " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>


        <TextView
            android:id="@+id/textDescricaoResposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Caso você esteja sem internet em sua residência ou empresa."
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>
</LinearLayout>