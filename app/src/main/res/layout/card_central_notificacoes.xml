<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:padding="7dp">

        <TextView
            android:id="@+id/textViewFaixaLateralDif"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:text=" " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cardIcone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_central_notificacoes_card"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/textViewTituloNotificacao"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="-70dp"
                android:fontFamily="sans-serif-light"
                android:shadowColor="@color/colorPrimaryDark"
                android:shadowDx="1"
                android:shadowDy="1"
                android:text="TÍTULO"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textViewMsgNotificacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="105dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:text="Mensagem"
                android:textSize="12sp"
                tools:ignore="RtlCompat" />


        </LinearLayout>


        <!-- LAYOUT DOS BOTÕES DA NOTIFICAÇÃO -->
        <LinearLayout
            android:id="@+id/linearLayoutBotoesNotificacao"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <!-- BOTÃO CONFIRMAR AGENDAMENTO OU QUALQUER OUTRA NOTIFICAÇÃO -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="2dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutbuttonConfirmarNotificacao"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="160dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textViewLayoutbuttonConfirmarNotificacaoTexto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@android:string/VideoView_error_title"
                        android:drawableStart="@drawable/ic_confirmar_agendamento"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="SIM"
                        android:paddingRight="22dp"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorCorBrancaDestaqueOpcao"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <!-- BOTÃO RECUSAR AGENDAMENTO OU QUALQUER OUTRA NOTIFICAÇÃO -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="10dp"
                android:elevation="2dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutbuttonRecusarNotificacao"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="160dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textViewLayoutbuttonRecusarNotificacaoTexto"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@android:string/VideoView_error_title"
                        android:drawableStart="@drawable/ic_reagendar_agendamento"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingRight="22dp"
                        android:text="NÃO"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorCorBrancaDestaqueOpcao"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>