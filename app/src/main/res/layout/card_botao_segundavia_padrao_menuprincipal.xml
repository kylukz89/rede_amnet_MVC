<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="120dp"
    android:layout_height="130dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentfaturas"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            tools:ignore="UselessParent" />

        <RelativeLayout
            android:id="@+id/relativeLayoutSegundaVia"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/fragmentfaturas"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_shadow_botoes_normais"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_segundavia"
                android:textColor="@color/colorPadraoCinzaPadrao"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="85dp"
                android:layout_marginBottom="105dp"
                android:background="#00000000"
                android:contentDescription="@android:string/VideoView_error_title"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:text="2Âª Via da Fatura"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorCorBrancaDestaqueOpcao"
                android:textSize="14sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>