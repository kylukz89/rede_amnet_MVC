<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentfaturas"
        android:layout_width="130dp"
        android:layout_height="130dp">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp">

            <RelativeLayout
                android:id="@+id/relativeLayoutMinhaConta"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/ic_conta"
                    android:textColor="@color/colorPadraoCinzaPadrao"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewMinhaConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000"
                    android:contentDescription="@android:string/VideoView_error_title"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Minha Conta"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorCorBrancaDestaqueOpcao"
                    android:textSize="12sp" />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>