<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/fragmentfaturas"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">


        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@color/colorPrimaryDark"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:id="@+id/relativeLayoutMinhaConta"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/border_shadow_botoes_normais"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_conta"
                    android:textColor="@color/colorPadraoCinzaPadrao"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewMinhaConta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00000000"
                    android:contentDescription="@android:string/VideoView_error_title"
                    android:fontFamily="sans-serif-light"
                    android:gravity="start"
                    android:text="Minha Conta"
                    android:textAlignment="textStart"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="@color/colorCorBrancaDestaqueOpcao"
                    android:textSize="14sp" />

            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>