                android:fontFamily="sans-serif-light"
                android:text="Vencimento 10/04/2019 (-5)"
                android:textAlignment="viewStart"
                android:textColor="@color/colorIconesMenu"
                android:textSize="16sp" /> -->

        <TextView
            android:id="@+id/textViewStatusPlano"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="@font/roboto_bold_"
            android:text="Habilitado"
            android:textColor="@color/colorBotaoPagar2"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageViewFatura"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="165dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/ic_plano_verde" />

        <WebView
            android:id="@+id/webViewPropagandaRoleta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="false"
            android:scaleType="centerCrop"
            android:shadowColor="#111"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:visibility="gone"
            android:windowSoftInputMode="adjustResize" />

        <TextView
            android:id="@+id/textViewNomePlano"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="58dp"
            android:layout_marginRight="58dp"
            android:fontFamily="@font/roboto_bold_"
            android:text="Banda Larga 50 Mb down 20 Mb up"
            android:textColor="@color/colorIconeAzulNubank"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewVencimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="143dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:layout_toRightOf="@+id/imageViewFatura"
            android:fontFamily="@font/roboto_thin"
            android:text="Vencimento 10/04/2019"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#111111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewEnderecoInstalacao"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginRight="-1dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/roboto_bold_"
            android:lines="1"
            android:maxLines="1"
            android:text="Endereço"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:fontFamily="sans-serif-light"
            android:text="R$ 89,90"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textViewEscolherPlanoAntivirus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_abrir_plano"
            android:drawableRight="@drawable/ic_abrir_plano" />


    </RelativeLayout>


