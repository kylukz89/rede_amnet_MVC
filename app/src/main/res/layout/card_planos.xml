<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:id="@+id/cardRoletaPlano"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/main_header_selector_roleta"
        android:clickable="true"
        app:cardElevation="0dp"
        tools:ignore="MissingPrefix">


        <TextView
            android:id="@+id/textViewFaixaLateralDifRoleta"
            android:layout_width="4.85dp"
            android:layout_height="85dp"
            android:layout_marginTop="85dp"
            android:background="#888"
            android:fontFamily="sans-serif-light"
            android:elevation="1dp"
            android:text=" " />

        <TextView
            android:id="@+id/textViewFaixaLateral"
            android:layout_width="5dp"
            android:layout_height="160dp"
            android:background="#aaa"
            android:fontFamily="sans-serif-light"
            android:text=" " />

        <!--<TextView
                android:id="@+id/textViewVencimento"
                android:layout_width="278dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="27dp"
