<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="7dp"
    android:layout_marginBottom="5dp"
    android:cropToPadding="true"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    app:cardElevation="7dp"
    android:padding="5dp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:id="@+id/linearLayoutListaAtendimento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:padding="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageViewIconeAtendimento"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_sem_net" />


        <TextView
            android:id="@+id/textTituloAtendimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Desconexão"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Estou sem internet"
            android:textColor="#111111"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Caso você esteja sem internet em sua residência ou empresa."
            android:textSize="12sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>