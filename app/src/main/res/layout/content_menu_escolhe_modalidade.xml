<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rede.App.View.View.EscolheModalidadePlanoActivity"
    tools:showIn="@layout/app_bar_menu_escolhe_modalidade">

    <!-- LAYOUT PRINCIPAL -->
    <LinearLayout
        android:id="@+id/linearBotaoModalidadeResidencial"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:clipToPadding="false"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_modalidade_residencial"
            android:textColor="@color/colorPadraoCinzaPadrao"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="RESIDENCIAIS"
            android:textAlignment="center"
            android:textColor="@color/colorCorBrancaDestaqueOpcao"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearBotaoModalidadeEmpresarial"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:clipToPadding="false"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_modalidade_empresarial"
            android:textColor="@color/colorPadraoCinzaPadrao"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#00000000"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="EMPRESARIAIS"
            android:textAlignment="center"
            android:textColor="@color/colorCorBrancaDestaqueOpcao"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>