<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/cardRoleta"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorCorBrancaDestaqueOpcao"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPOPUPTextoAvaliacao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBarAvaliartecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- LAYOUT DOS BOTÕES DA NOTIFICAÇÃO -->
        <LinearLayout
            android:id="@+id/linearLayoutBotoesNotificacao"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="visible">

            <!-- BOTÃO CONFIRMAR AGENDAMENTO OU QUALQUER OUTRA NOTIFICAÇÃO -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:elevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutbuttonOKAvaliarTecnico"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="160dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@android:string/VideoView_error_title"
                        android:drawableStart="@drawable/ic_confirmar_agendamento"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingRight="22dp"
                        android:text="OK, ENVIAR"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorCorBrancaDestaqueOpcao"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <!-- BOTÃO RECUSAR AGENDAMENTO OU QUALQUER OUTRA NOTIFICAÇÃO -->
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:elevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relativeLayoutbuttonNaoQueroAvaliarTecnico"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="160dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:contentDescription="@android:string/VideoView_error_title"
                        android:drawableStart="@drawable/ic_reagendar_agendamento"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:paddingRight="22dp"
                        android:text="NÃO QUERO"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorCorBrancaDestaqueOpcao"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>