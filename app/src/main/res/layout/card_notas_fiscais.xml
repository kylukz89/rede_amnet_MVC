<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/cardNF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="45dp"
            android:fontFamily="sans-serif-light"
            android:paddingTop="5dp"
            android:text="Em Aberto"
            android:textColor="@color/colorIconesMenu"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewFaixaLateralDif"
            android:layout_width="5dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:text=" " />

        <ImageView
            android:id="@+id/cardIcone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/app_name"
            tools:srcCompat="@drawable/ic_nf_vermelho" />

        <TextView
            android:id="@+id/cardValor"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-light"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="R$ 0.000,00"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/cardVencimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light"
            android:paddingTop="5dp"
            android:text="16/03/2019 (82)"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/textViewFaixaLateral"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:background="@color/colorIconeAzulNubank"
            android:text=" " />

        <ImageView
            android:id="@+id/cardDownload"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginStart="105dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            tools:srcCompat="@drawable/ic_nf_download" />



    </androidx.cardview.widget.CardView>
</LinearLayout>