<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#EFEDED"
    android:padding="10dp"
    tools:context=".View.View.MenuAtendimentoResposta"
    tools:showIn="@layout/app_bar_menu_atendimento_resposta">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCategoriaIcone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-5dp"
            android:foregroundGravity="center">
        </ImageView>

        <TextView
            android:id="@+id/textViewCategoriaNomeEscolhida"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:foregroundGravity="center_vertical|clip_horizontal|clip_vertical|center_horizontal"
            android:gravity="center"
            android:text="Categoria"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewListaTiposAtendimentosRespostas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:nestedScrollingEnabled="false"
            android:paddingBottom="45dp"
            android:layout_marginBottom="5dp"
            android:windowSoftInputMode="stateHidden|adjustPan"
            app:layoutManager="LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>



</RelativeLayout>