<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutBotao"
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:background="@color/colorBotaoMenuPrincipal"
    android:orientation="horizontal"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@color/colorBotaoMenuPrincipal"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutMinhaConta"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/border_shadow_botoes_normais_menu"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imageViewIconeBotao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPadraoCinzaPadrao"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageViewIconeFlag"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPadraoCinzaPadrao"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/textViewNomeBotao"
                android:layout_width="119dp"
                android:layout_height="125dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="0dp"
                android:background="#00000000"
                android:contentDescription="@android:string/VideoView_error_title"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:text="A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorCorBrancaDestaqueOpcao"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>