<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="7dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="150dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutPagarFatura"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/main_header_selector_verde_pagar"
            android:clickable="true"
            android:descendantFocusability="blocksDescendants"
            android:focusable="true"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewPagar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="false"
                android:layout_alignParentEnd="false"
                android:background="#00000000"
                android:contentDescription="@android:string/VideoView_error_title"
                android:drawableStart="@drawable/ic_confirmar_pagamento"
                android:fontFamily="sans-serif"
                android:gravity="fill_vertical"
                android:text="PAGAR FATURA"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorCorBrancaDestaqueOpcao"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

        </RelativeLayout>

