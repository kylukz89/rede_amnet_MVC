<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="Tempo Expirado!"
        android:textAlignment="center"
        android:textColor="@color/colorFaturaVermelha"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:justificationMode="inter_word"
        android:text="Desculpe! Seu tempo de sessÃ£o expirou ou o app ficou minizado por muito tempo. Favor reiniciar o aplicativo."
        android:textAlignment="center"
        android:textColor="@color/colorIconesMenu"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_tempo_expirado" />


</LinearLayout>