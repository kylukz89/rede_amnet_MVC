<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@color/colorPadraoCinzaPadrao"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.View.MenuSegundaVia"
    tools:showIn="@layout/app_bar_menu_segundavial">


    <RelativeLayout
        android:id="@+id/relativeCamposFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPadraoCinzaClaro">


        <EditText
            android:id="@+id/editTextDataDe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorCorBrancaDestaqueOpcao"
            android:descendantFocusability="beforeDescendants"
            android:drawableStart="@drawable/ic_calendar_branco"
            android:drawablePadding="5dp"
            android:focusable="false"

            android:drawableTint="@color/colorCorBrancaDestaqueOpcao"
            android:focusableInTouchMode="true"
            android:hint="De"
            android:textAlignment="gravity"
            android:textColor="@color/colorCorBrancaDestaqueOpcao"
            android:textColorHint="@color/colorCorBrancaDestaqueOpcao"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_calendar_branco" />

        <!--android:background="@drawable/border_light"-->

        <EditText
            android:id="@+id/editTextDataAte"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/editTextDataDe"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorCorBrancaDestaqueOpcao"
            android:descendantFocusability="beforeDescendants"
            android:drawableStart="@drawable/ic_calendar_branco"
            android:drawablePadding="5dp"
            android:focusable="false"

            android:drawableTint="@color/colorCorBrancaDestaqueOpcao"
            android:focusableInTouchMode="true"
            android:hint="Até"
            android:textAlignment="gravity"
            android:textColor="@color/colorCorBrancaDestaqueOpcao"
            android:textColorHint="@color/colorCorBrancaDestaqueOpcao"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_calendar_branco" />


        <LinearLayout
            android:id="@+id/linearBotaoFiltrar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/editTextDataAte"
            android:background="@drawable/border_shadow_botoes_normais"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_toRightOf="@+id/editTextDataAte">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignEnd="@+id/linearBotaoFiltrar"
                android:layout_alignBottom="@+id/linearBotaoFiltrar"
                android:background="@drawable/ic_lupa"
                android:textColor="@color/colorPadraoCinzaPadrao"
                android:textSize="20dp"
                android:layout_alignRight="@+id/linearBotaoFiltrar" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/textViewTituloSegundaVia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeCamposFiltro"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="2ª Via das Faturas"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewFaturas"
        android:layout_width="391dp"
        android:layout_height="521dp"
        android:layout_below="@id/textViewTituloSegundaVia"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/card_segvia_recyclerview"
        android:divider="@null"
        android:fastScrollAlwaysVisible="false"
        android:fastScrollEnabled="false"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scrollbarSize="5dp"
        android:smoothScrollbar="false"
        android:splitMotionEvents="true"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">

    </androidx.recyclerview.widget.RecyclerView>

