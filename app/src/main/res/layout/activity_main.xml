    <EditText
        android:id="@+id/editTextcampoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_conta_nome"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="CPF"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_conta_nome" />


    <EditText
        android:id="@+id/editTextcampoSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_primary_key"
        android:drawablePadding="10dp"
        android:layout_marginBottom="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp"
        android:drawableLeft="@drawable/ic_primary_key" />


    <LinearLayout
        android:id="@+id/linearBotaoCadastrar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/buttonBotaoAcessar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center_horizontal|center_vertical"
            android:text="ACESSAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            tools:ignore="OnClick" />

    </LinearLayout>

    <TextView
        android:id="@+id/tex"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:gravity="center"
        android:textColor="#00FF00"
        android:textSize="25pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEsqueciSenha"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:text="Deseja alterar sua senha? Clique aqui."
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textViewAssinar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:text="Tornar-se Assinante"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/textViewCadastroPotencial"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:text="Ainda não sou cliente"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/versao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.84"
        android:gravity="bottom"
        android:text="Copyright © Rede Telecom"
        android:textAlignment="center"
        android:textColor="@color/colorPadraoCinzaPadrao"
        tools:ignore="RtlCompat" />


</LinearLayout>
