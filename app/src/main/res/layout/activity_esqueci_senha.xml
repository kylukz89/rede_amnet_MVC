<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrao_potencial_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logintelapng"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1"
    tools:context=".View.View.EsqueciSenha">


    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="110dp"
        android:hint="Esqueci minha senha"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editTextCPFRedefinirSenha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_conta_nome"
        android:drawableLeft="@drawable/ic_conta_nome"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="CPF"
        android:inputType="numberDecimal"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linearBotaoPagar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/botaoEnviarSenhaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="initiateAsyncTask"
            android:text="ENVIAR SENHA POR E-MAIL"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:ignore="OnClick" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearBotaoCancelarEsqueciSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp">
        <Button
            android:id="@+id/botaoCancelarEsqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="initiateAsyncTask"
            android:text="CANCELAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:ignore="OnClick" />
    </LinearLayout>


</LinearLayout>
