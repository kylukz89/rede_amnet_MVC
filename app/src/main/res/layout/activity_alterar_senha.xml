<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrao_potencial_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logintelapng"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1"
    tools:context=".View.View.MainActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="110dp"
        android:hint="Alterar Senha"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextCPF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_conta_nome"
        android:drawableLeft="@drawable/ic_conta_nome"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="CPF ou CNPJ"
        android:inputType="numberDecimal"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_primary_key"
        android:drawableLeft="@drawable/ic_primary_key"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Senha"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_primary_key"
        android:drawableLeft="@drawable/ic_primary_key"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Nova Senha"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextRepitaNovaSenha"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_primary_key"
        android:drawableLeft="@drawable/ic_primary_key"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Repita Nova Senha"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/linearBotaoPagar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/botaoAlterarSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="initiateAsyncTask"
            android:text="OK, SALVAR ALTERAÇÃO"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:ignore="OnClick" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearBotaoCancelar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/botaoCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="initiateAsyncTask"
            android:text="CANCELAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:ignore="OnClick" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearBotaoEsqueciSenha"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/botaoEsqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="initiateAsyncTask"
            android:text="ESQUECI MINHA SENHA"
            android:textAlignment="center"
            android:textColor="@color/colorFaturaVermelha"
            android:textSize="18sp"
            tools:ignore="OnClick" />
    </LinearLayout>

</LinearLayout>
