<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutPopUpCartao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTituloPOPUP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/main_header_selector_verde_pagar"
                android:drawableStart="@drawable/ic_credit"
                android:drawableTint="@color/colorCorBrancaDestaqueOpcao"
                android:drawingCacheQuality="auto"
                android:gravity="center"
                android:maxLength="@android:integer/config_longAnimTime"
                android:padding="12dp"
                android:text="VINDI - CADASTRAR CARTÃO"
                android:textAlignment="center"
                android:textColor="@color/colorCorBrancaDestaqueOpcao"
                android:textSize="16sp"
                android:textStyle="bold" />

<!--            <ImageView-->
<!--                android:id="@+id/imageViewBandeiras"-->
<!--                android:layout_width="220dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/textViewTituloPOPUP"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginStart="50dp"-->
<!--                android:layout_marginEnd="50dp"-->
<!--                android:drawingCacheQuality="high"-->
<!--                android:visibility="visible"-->

<!--                tools:ignore="NotSibling" />-->


            <EditText
                android:id="@+id/editTextNumeroCartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_credit"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:drawingCacheQuality="high"
                android:fontFamily="sans-serif-light"
                android:hint="Cartão 0000.0000.0000.0000"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextValidade"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumeroCartao"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:fontFamily="sans-serif-light"
                android:hint="Val. 00/00"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextCVV"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextNumeroCartao"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/editTextValidade"
                android:drawableStart="@drawable/ic_primary_key"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:fontFamily="sans-serif-light"
                android:hint="CVV 000"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextTitular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextValidade"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_conta_nome"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:fontFamily="sans-serif-light"
                android:hint="Nome Titular"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible" />


            <EditText
                android:id="@+id/editTextCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextTitular"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_cpf"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:fontFamily="sans-serif-light"
                android:hint="CPF 000.000.000-00"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextFone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextCPF"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_celular"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorPadraoCinzaPadrao"
                android:fontFamily="sans-serif-light"
                android:hint="Celular XX000000000"
                android:inputType="phone"
                android:maxLength="15"
                android:textAlignment="center"
                android:textSize="16sp"
                android:visibility="visible" />


            <LinearLayout
                android:id="@+id/linearBotaoConfirmarPagamento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextFone"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="false"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/botao_pagar"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_confirmar_pagamento"
                    android:foregroundGravity="center_horizontal"
                    android:textColor="@color/colorPadraoCinzaPadrao"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/imageButtonPagar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:foregroundGravity="center_horizontal"
                    android:padding="5dp"
                    android:text="CADASTRAR / SALVAR"
                    android:textAlignment="center"
                    android:textColor="@color/colorCorBrancaDestaqueOpcao"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>