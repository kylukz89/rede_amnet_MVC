<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrao_potencial_cliente"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animationCache="false"
    android:background="@drawable/logintelapng"
    android:drawingCacheQuality="auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1"
    tools:context=".View.View.CadastraPotencialCliente">



    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="110dp"
        android:hint="Cadastro de Novo Cliente"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="1dp"
        android:hint="Cadastre-se gratuitamente e sem compromisso"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColorHint="@color/colorCorBrancaDestaqueOpcao"
        android:textSize="14sp" />

    <Switch
        android:id="@+id/switchTipo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="3.5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.06"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_rg"
        android:drawablePadding="5dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:text=" Escolha CPF ou CNPJ"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/editTextcampoCPFCNPJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="CPF"
        android:inputType="number"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_conta_nome" />

    <EditText
        android:id="@+id/editTextcampoRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableLeft="@drawable/ic_conta_nome"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="RG"
        android:inputType="number"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextcampoNomeCompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_assinar_pequeno"
        android:drawableLeft="@drawable/ic_assinar_pequeno"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Nome Completo"
        android:inputType="textCapWords"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextcampoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_mail"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="E-mail"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_mail" />

    <EditText
        android:id="@+id/editTextCampoNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Nascimento"
        android:inputType="date"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_calendar" />

    <EditText
        android:id="@+id/editTextcampoCelular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:drawableStart="@drawable/ic_celular"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPadraoCinzaPadrao"
        android:hint="Celular"
        android:inputType="phone"
        android:textColor="@color/colorPadraoCinzaPadrao"
        android:textColorHint="@color/colorPadraoCinzaPadrao"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_celular" />

    <LinearLayout
        android:id="@+id/linearBotaoCadastrar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_shadow"

        android:orientation="horizontal"
        android:padding="5dp"
        tools:ignore="MissingConstraints,OnClick"
        tools:layout_editor_absoluteY="290dp">

        <Button
            android:id="@+id/buttonBotaoCadastrarPotencial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="processamento"
            android:text="CADASTRAR"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tools:ignore="OnClick" />

    </LinearLayout>


</LinearLayout>
