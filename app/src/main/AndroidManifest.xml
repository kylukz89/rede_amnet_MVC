<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rede.ncarede">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="oppo.permission.OPPO_COMPONENT_SAFE" />
    <uses-permission android:name="com.huawei.permission.external_app_settings.USE_COMPONENT" />
    <uses-permission
        android:name="android.permission.MANAGE_APP_TOKENS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission
        android:name="android.permission.MANAGE_DOCUMENTS"
        tools:ignore="ProtectedPermissions" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:targetSandboxVersion="1"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notificacao_padrao" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimaryDark" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity
            android:name="com.rede.App.View.View.ScrollingSobre"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.rede.App.View.View.MenuSegundaVia"
            android:exported="false"
            android:grantUriPermissions="true"
            android:largeHeap="true"
            android:readPermission="com.rede.ncarede.READ_CONTENT"
            android:writePermission="com.rede.ncarede.WRITE_CONTENT">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/providers_path" />
        </provider>

        <meta-data
            android:name="android.support.VERSION"
            android:value="27.0.3" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.rede.App.View.View.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rede.App.View.View.MainActivity"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.AlterarSenha"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuPrincipal"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuSegundaViaContrato"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuMinhaConta"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuSegundaVia"
            android:label="@string/title_activity_menu_conta"
            android:requestLegacyExternalStorage="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.PICK" />
                <action android:name="android.intent.action.PICK_ACTIVITY" />
                <action android:name="android.intent.action.GET_CONTENT" />
                <action android:name="android.intent.action.CHOOSER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rede.App.View.View.MenuHistoricoPagamento"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.PICK" />
                <action android:name="android.intent.action.PICK_ACTIVITY" />
                <action android:name="android.intent.action.GET_CONTENT" />
                <action android:name="android.intent.action.CHOOSER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rede.App.View.View.MenuHabProv"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuDadosPlano"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuAntivirus"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuRecorrenteContrato"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuFaleConosco"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.AdesoesWebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.AtendimentoOnlineWebViewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.rede.App.View.View.MenuCentralNotificacoes"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuRecorrenteCartao"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuTesteVelocidade"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuAtendimento"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuAtendimentoContrato"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.IPTVWebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuAtendimentoResposta"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.EsqueciSenha"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar"
            android:value="true" />
        <activity
            android:name="com.rede.App.View.View.MenuEditaDadosContato"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuParamountNoggin"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rede.App.View.View.MenuParamountNogginContrato"
            android:label="@string/title_activity_menu_conta"
            android:theme="@style/AppTheme.NoActionBar" />



        <service
            android:name="com.rede.App.View.Firebase.FirebaseMessagingService"
            android:exported="true">
            <intent-filter android:priority="-500">
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.rede.App.View.Firebase.FcmTokenRegistrationService" />
    </application>

</manifest>